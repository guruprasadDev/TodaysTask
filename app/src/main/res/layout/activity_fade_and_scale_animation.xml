<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FadeAndScaleAnimation">

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/img" />

        <Button
            android:id="@+id/viewBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fadeBtn"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="@string/scale_animation" />


        <Button
            android:id="@+id/scaleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/teal_200"
            android:text="@string/scale_animation" />

        <Button
            android:id="@+id/fadeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/scaleBtn"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/purple_700"
            android:text="@string/fade_animation" />

        <TextView
            android:id="@+id/myText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/guru_prasad"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>